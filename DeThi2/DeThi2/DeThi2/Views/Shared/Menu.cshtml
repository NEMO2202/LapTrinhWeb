@model IEnumerable<DeThi2.Models.Entities.PhanLoaiPhu>

<div class="flex-w flex-l-m filter-tope-group m-tb-10">
    <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
        All Products
    </button>
    @foreach (var item in Model)
    {
        <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 item" data-filter=".women" id="@item.MaPhanLoaiPhu">
            @item.TenPhanLoaiPhu
        </button>
    }
</div>
<script>
    $(".item").click(function () {
        var maloai = $(this).attr("id");
        $.ajax({
            url: "RenderProductByMenu",
            data: { maloai: maloai },
            success: function (res) {
                $("div#content").html(res);
            }
        })
    })
</script>

@model IEnumerable<DeThi1.Models.PhanLoai>

<div class="col text-center">
    <div class="new_arrivals_sorting">
        <ul class="arrivals_grid_sorting clearfix button-group filters-button-group">
            <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center active is-checked" data-filter="*">all</li>
            @foreach (var item in Model)
            {
                <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center item"  id="@item.MaPhanLoai">
                    @item.PhanLoaiChinh
                </li>
            }
        </ul>
    </div>
</div>
<script>
    $(".item").click(function () {
        var maloai = $(this).attr("id");
        $.ajax({
            url: "RenderProductByMenu",
            data: { maloai: maloai },
            success: function (res) {
                $("div#content").html(res);
            }
        })
    })
</script>

